<%= form_for_filterrific filterrific do |f| %>
  <div class="row">
    <div class="col">
      <label>Name</label>
      <%= f.text_field(
              :search_name,
              class: 'filterrific-periodically-observed form-control'
          ) %>
    </div>
    <div class="col">
      <label>Email</label>
      <%= f.text_field(
              :search_email,
              class: 'filterrific-periodically-observed form-control'
          ) %>
    </div>
    <div class="col">
      <label>Joined After</label>
      <%= f.date_field(
              :with_created_after,
              class: 'filterrific-periodically-observed form-control'
          ) %>
    </div>
    <div class="col">
      <label>Role</label>
      <%= f.select(
              :with_role,
              filterrific.select_options[:with_role],
              { include_blank: "Any" },
              class: 'form-control'
          ) %>
    </div>
    <div class="col">
      <label>Membership Status</label>
      <%= f.select(
              :with_membership_status,
              filterrific.select_options[:with_membership_status],
              { include_blank: "Any" },
              class: 'form-control'
          ) %>
    </div>
  </div>
  <div class="row">
    <div class="col">
      <%= link_to "Reset Filters", reset_filterrific_url, class: 'btn btn-secondary btn-sm' %>
    </div>
  </div>
<% end %>
